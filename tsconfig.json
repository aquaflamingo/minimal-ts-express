{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": "src",
        "paths": {
            "*": [
                "*",
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "**/*.spec.ts"
    ]
}
